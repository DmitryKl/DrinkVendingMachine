@model DrinkListViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-10 drink-panel">
            <div class="container">
                <div class="row">
                    @foreach (var drink in Model.Drinks)
                    {
                        <div class="col-md-4">
                            <btn class="btn btn-outline-dark card mb-4 box-shadow disabled drinkElement" style="height: 200px" onclick="Buy(@drink.Id)" id="@drink.Id">
                                <img src="@Url.Content(drink.ImagePath)" class="card-img-top align-self-center" style="height: 80%; width: auto; display: block;">
                                <div class="card-body">
                                    <p class="card-title">@drink.Title <span id="cost">@drink.Cost</span></p>                                    
                                </div>
                                <div id="count" hidden>@drink.Count</div>
                            </btn>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-2 coin-panel">
            <div class="container">
                <div class="row">
                    @foreach (var coin in Model.Coins)
                    {
                        <button class="btn btn-dark mb-2 @(coin.Blocked ? "disabled" : "")" onclick="AddCoin(@coin.Value)" >
                            <img src="@Url.Content("files/dollar.png")" class="float-start">@coin.Value</button>
                    }
                </div>
                <div class="row">
                    <h3 class="text-end" id="sum">0</h3>
                </div>
                <div class="row">
                    <button class="btn btn-dark" onclick="TakeChange()">Получить сдачу</button>
                </div>

                <div class="row">
                    <h3>Сдача: </h3>
                </div>
                <div class="row" id="change">
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/js/HomeScript.js"></script>